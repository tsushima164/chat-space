.message{ data: { id: "#{message.id}" } }
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d(%a) %T")
  .message__lower-info
    - if message.content.present?
      %p.message-text
        = message.content
    = image_tag message.image.url, class: 'lower-info__image' if message.image.present?